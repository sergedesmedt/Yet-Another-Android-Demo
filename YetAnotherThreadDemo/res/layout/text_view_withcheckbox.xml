<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <Button android:text="Button" android:id="@+id/buttonDoIt" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"></Button>
	<RelativeLayout android:id="@+id/relativeLayout1"
	        android:layout_height="fill_parent" 
	        android:layout_width="fill_parent">
	    <LinearLayout android:orientation="vertical"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content">
	        <LinearLayout
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content">
	
	            <TextView
	                android:id="@+id/textView1"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="Task duration (sec.)"
	                android:textAppearance="?android:attr/textAppearanceMedium" />
	
	            <EditText
	                android:id="@+id/editTextTaskDuration"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:inputType="number" />
	
	        </LinearLayout>
	        <CheckBox android:id="@+id/checkBoxConfig" 
		       android:text="Update on custom thread"
	           android:layout_width="wrap_content" 
	           android:layout_height="wrap_content" />
	        <TextView  
		        android:id="@+id/textView"
		        android:text="After clicking the button, try the checkbox within the task duration seconds."
		        android:layout_width="fill_parent" 
		        android:layout_height="wrap_content"/>
		</LinearLayout>
	    <CheckBox android:id="@+id/checkBox1" 
	       android:text="CheckBox"
           android:layout_width="wrap_content" 
           android:layout_height="wrap_content" 
	       android:layout_alignParentBottom="true"/>
	</RelativeLayout>
</LinearLayout>
