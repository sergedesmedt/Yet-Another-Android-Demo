<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
    <LinearLayout 
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <Button android:text="Take action" android:id="@+id/buttonDoIt" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content"></Button>
	    <LinearLayout 
	        android:orientation="horizontal"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        >
	        <TextView android:id="@+id/textView1" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="Task duration (sec.)" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"></TextView>
	        <EditText android:id="@+id/editTextTaskDuration" android:inputType="number" android:layout_height="wrap_content" android:layout_alignParentTop="true" android:layout_toRightOf="@+id/textView1" android:layout_width="match_parent">
	        </EditText>
	    </LinearLayout>
        <CheckBox android:id="@+id/checkBoxCheckForCancelation" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_height="wrap_content" android:text="Check for cancelation" android:layout_width="wrap_content" android:layout_below="@+id/textView" android:layout_alignParentLeft="true"></CheckBox>
        <Button android:text="Cancel action with interrupt" android:id="@+id/buttonCancelItWithInterrupt" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content"></Button>
        <Button android:text="Cancel action no interrupt" android:id="@+id/buttonCancelItNoInterrupt" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content"></Button>
    </LinearLayout>
    <RelativeLayout android:id="@+id/relativeLayout1"
            android:layout_height="fill_parent" 
            android:layout_width="fill_parent">
        <TextView  
            android:id="@+id/textView"
            android:text=""
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</LinearLayout>
